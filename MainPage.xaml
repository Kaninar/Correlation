<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:model="clr-namespace:Correlation"
             x:Class="Correlation.MainPage">
    <ContentPage.BindingContext>
        <model:DataViewModel/>
    </ContentPage.BindingContext>
    <Grid ColumnDefinitions="35*, 65*"
          RowDefinitions="*"
          Padding="10, 5, 10, 0">
        <VerticalStackLayout Grid.Column="0"
                             Grid.Row="0">
            <Label Text="Данные"
                   HorizontalOptions="Center"/>
            <ListView ItemsSource="{Binding Data}"
                      VerticalScrollBarVisibility="Always"
                      MaximumHeightRequest="700">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid RowDefinitions="*"
                                  ColumnDefinitions="37.5*, 37.5*, 25*">
                                <Entry x:Name="Xentr" Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{Binding X}"/>
                                <Entry x:Name="Yentr" 
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Y}"/>
                                <!--<Button x:Name="ActionBtn"
                                        Grid.Row="0"
                                        Grid.Column="2" 
                                        BackgroundColor="Red"
                                        TextColor="Black"
                                        Text="✓"
                                        Padding="20,5,5,20"/>-->
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="1"
                            Grid.Row="0">

            <chart:SfCartesianChart>
                <chart:SfCartesianChart.XAxes>
                    <chart:CategoryAxis>
                        <chart:CategoryAxis.Title>
                            <chart:ChartAxisTitle Text="Y"/>
                        </chart:CategoryAxis.Title>
                    </chart:CategoryAxis>
                </chart:SfCartesianChart.XAxes>
                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis>
                        <chart:NumericalAxis.Title>
                            <chart:ChartAxisTitle Text="X"/>
                        </chart:NumericalAxis.Title>
                    </chart:NumericalAxis>
                </chart:SfCartesianChart.YAxes>

                <chart:ScatterSeries ItemsSource="{Binding Data}" 
                        XBindingPath="X" 
                        YBindingPath="Y"
                        EnableTooltip="True"
                        PointHeight="14"
                        PointWidth="14"
                                     
                        PaletteBrushes="{Binding ShutterBrushes}"/>
                <chart:LineSeries ItemsSource="{Binding Regration}"
                                  XBindingPath="X" 
                                  YBindingPath="Y"
                                  PaletteBrushes="{Binding LineBrushes}"
                                  StrokeWidth="3"/>
            </chart:SfCartesianChart>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
